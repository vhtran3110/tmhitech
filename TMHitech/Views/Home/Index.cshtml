@model TMHitech.MVC.ViewModels.HomeViewModel

<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/css/style.css" rel="stylesheet" />

<section class="home-banner">
    <div class="banner-overlay"></div>

    <div class="container banner-content">
        <div class="row align-items-center">

            <div class="col-md-5 banner-text">
                <h1>@Model.FeaturedProduct.Name</h1>
                <div class="line"></div>

                <ul>
                    <li>===> Model: @Model.FeaturedProduct.Model</li>
                    <li>===> Hãng sản xuất: @Model.FeaturedProduct.Manufacturer</li>
                    <li>===> Nước sản xuất: @Model.FeaturedProduct.Country</li>
                </ul>

                <a href="#" class="btn-detail">
                    Chi tiết <span>›</span>
                </a>
            </div>

            <div class="col-md-7 text-center">
                <img src="@Url.Content(Model.FeaturedProduct.Image)" class="product-img" />
            </div>

        </div>
    </div>

    <div class="slider-arrow left">‹</div>
    <div class="slider-arrow right">›</div>
</section>

<section class="equipment-section">
    <div class="equipment-row">
        <div class="equipment-item bg1">
            <div class="overlay overlay-left overlay-blue">
                <h3>THIẾT BỊ</h3>
                <h2>CHẨN ĐOÁN<br />HÌNH ẢNH</h2>
                <a href="#" class="btn-view">Xem thêm &gt;</a>
            </div>
        </div>

        <div class="equipment-item bg2">
            <div class="overlay overlay-right overlay-purple">
                <h3>THIẾT BỊ</h3>
                <h2>HỒI SỨC<br />CẤP CỨU</h2>
                <a href="#" class="btn-view">Xem thêm &gt;</a>
            </div>
        </div>
    </div>

    <div class="equipment-row">
        <div class="equipment-item bg3">
            <div class="overlay overlay-right overlay-teal">
                <h3>THIẾT BỊ</h3>
                <h2>PHÒNG MỔ</h2>
                <a href="#" class="btn-view">Xem thêm &gt;</a>
            </div>
        </div>

        <div class="equipment-item bg4">
            <div class="overlay overlay-left overlay-blue">
                <h3>THIẾT BỊ</h3>
                <h2>CHUYÊN KHOA<br />NỘI</h2>
                <a href="#" class="btn-view">Xem thêm &gt;</a>
            </div>
        </div>
    </div>

    <div class="equipment-row">
        <div class="equipment-item bg5">
            <div class="overlay overlay-left overlay-pink">
                <h3>THIẾT BỊ</h3>
                <h2>CHUYÊN KHOA SẢN – NHI</h2>
                <a href="#" class="btn-view">Xem thêm &gt;</a>
            </div>
        </div>

        <div class="equipment-item bg6">
            <div class="overlay overlay-right overlay-teal">
                <h3>THIẾT BỊ</h3>
                <h2>PHỤC HỒI<br />CHỨC NĂNG</h2>
                <a href="#" class="btn-view">Xem thêm &gt;</a>
            </div>
        </div>
    </div>
</section>

<section class="medical-knowledge">
    <div class="container">
        <h2 class="section-title">KIẾN THỨC Y TẾ</h2>

        <div class="knowledge-grid">
            @foreach (var item in Model.LatestNews)
            {
                <div class="knowledge-item">
                    <img src="@Url.Content("~/Content/Images/news/" + item.Image)" />

                    <div class="content">
                        <h3>@item.Title</h3>
                        <p>
                            @(item.Content != null && item.Content.Length > 120
                                ? item.Content.Substring(0, 120) + "..."
                                : item.Content)
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>