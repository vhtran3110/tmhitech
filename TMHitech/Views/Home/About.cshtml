                        <li><img src="~/Content/Images/overlay/overlay6.jpg" class="about-content-img" style="width: 48px !important; height: 48px !important; object-fit: cover;">Thiết bị y tế khác <small>Xem chi tiết</small></li>
                    </ul>
                </div>
                <div class="sidebar-box">
                    <h5>TIN NỔI BẬT</h5>

                    <div class="knowledge-grid">
                        @if (Model.LatestNews != null && Model.LatestNews.Any())
                        {
                            foreach (var item in Model.LatestNews)
                            {
                                <div class="knowledge-item">
                                    <img src="@Url.Content("~/Content/Images/news/" + item.Image)"
                                         alt="@item.Title" />

                                    <div class="content">
                                        <h3>@item.Title</h3>
                                        <p>
                                            @(item.Content != null && item.Content.Length > 120
                                ? item.Content.Substring(0, 120) + "..."
                                : item.Content)
                                        </p>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p>Chưa có tin tức.</p>
                        }
                    </div>
                </div>

            </div>
            </div>  
        </div>